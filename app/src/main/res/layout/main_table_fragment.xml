<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include
                android:id="@+id/header"
                layout="@layout/main_table_adapter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </FrameLayout>

        <View
            android:id="@+id/top_sep"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/header_container"
            android:background="@android:color/holo_red_dark" />

        <FrameLayout
            android:id="@+id/footer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include
                android:id="@+id/footer"
                layout="@layout/main_table_adapter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </FrameLayout>

        <View
            android:id="@+id/bottom_sep"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_above="@+id/footer_container"
            android:background="@android:color/holo_red_dark" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_table_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_sep"
            android:layout_below="@+id/top_sep"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</HorizontalScrollView>